<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/screen_padding_double"
    android:paddingRight="@dimen/screen_padding_double"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/biller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_4D"
        android:textSize="@dimen/font_size_22"
        android:layout_marginTop="@dimen/screen_padding_double_plus_half"
        android:layout_marginBottom="@dimen/screen_padding_half"/>

    <TextView
        android:id="@+id/booking_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_14"
        android:layout_marginBottom="@dimen/screen_padding_double_plus_half"
        android:textColor="@color/black_75"/>

</LinearLayout>