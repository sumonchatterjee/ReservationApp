<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragment.detail.WriteReviewFragment">

    <RelativeLayout
        android:id="@+id/ratereview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/screen_padding"
            android:src="@drawable/ic_action_navigation_arrow_back" />

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/screen_padding_double"
            android:paddingTop="@dimen/screen_padding"
            style="@style/MyStyle"
            android:text="@string/done"
            android:textColor="@color/app_grey_shade_five"
            android:textSize="@dimen/font_size_18" />

    </RelativeLayout>

    <include
        android:id="@+id/in_rate_layout"
        layout="@layout/review_common_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ratereview_header" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snackbarRatenReviewPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
