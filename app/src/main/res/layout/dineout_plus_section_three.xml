<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/group_9"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingLeft="@dimen/screen_padding"
            android:paddingRight="@dimen/screen_padding"
            android:background="#80000000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/doplus_breakfast"/>

            <TextView
                android:id="@+id/do_refer_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/screen_padding"
                android:paddingRight="@dimen/screen_padding"
                android:text="@string/doplus_refer_restaurant"
                android:layout_marginTop="@dimen/screen_padding"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/screen_padding"
                android:paddingRight="@dimen/screen_padding"
                android:text="@string/doplus_refer"
                android:layout_marginTop="@dimen/screen_padding"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/screen_padding"
                android:paddingRight="@dimen/screen_padding"
                android:text="@string/doplus_refer_sub"
                android:layout_marginTop="@dimen/screen_padding"/>


        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_do_plus_section_three_header"
            android:textColor="@color/black_21"
            android:layout_marginTop="@dimen/screen_padding_plus_half"
            android:textSize="@dimen/font_size_28"/>

        <TextView
            android:id="@+id/amount_info_do_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_do_plus_section_three_desc"
            android:textColor="#636363"
            android:layout_marginTop="@dimen/screen_padding_plus_half"
            android:paddingLeft="@dimen/screen_padding_plus_half"
            android:paddingRight="@dimen/screen_padding_plus_half"
            android:layout_marginBottom="@dimen/screen_padding_plus_half"
            android:textSize="@dimen/font_size_14"/>


        <include
            layout="@layout/dineout_section_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/screen_padding_plus_half"
        android:paddingRight="@dimen/screen_padding_plus_half"
        android:background="@color/grey_ee">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Like the card?"
            android:textColor="#424242"
            android:layout_marginTop="@dimen/screen_padding_plus_half"
            android:textSize="@dimen/font_size_24"/>


        <Button
            android:id="@+id/btn_share_it_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHARE IT!"
            android:textColor="@color/black_42"
            android:textSize="@dimen/font_size_20"
            android:paddingTop="@dimen/screen_padding"
            android:paddingBottom="@dimen/screen_padding"

            android:layout_marginTop="@dimen/screen_padding_plus_half"
            android:layout_marginBottom="@dimen/screen_padding_triple"
            android:background="@drawable/rect_golden_border"/>




    </LinearLayout>

</LinearLayout>