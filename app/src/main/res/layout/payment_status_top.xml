<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/screen_padding"
        android:layout_marginTop="@dimen/screen_padding_double"
        android:src="@drawable/img_paid_stamp" />

    <TextView
        android:id="@+id/textViewPayFinalGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_status"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/screen_padding_plus_half"
        android:text="@string/text_bill_paid_success"
        android:textColor="@color/grey_4D"
        android:textSize="@dimen/font_size_18"
        style="@style/MyStyle" />

    <TextView
        android:id="@+id/textViewPayFinalTransactStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPayFinalGreeting"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/screen_padding_plus_half"
        android:text="@string/text_payment_successful"
        android:textColor="@color/grey_B34D"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPayFinalMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPayFinalTransactStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/screen_padding_double"
        android:layout_marginLeft="@dimen/screen_padding_plus_half"
        android:layout_marginRight="@dimen/screen_padding_plus_half"
        android:gravity="center"
        android:text="@string/text_bill_payment_confirmation_message"
        android:textColor="@color/black_B311"
        android:textSize="@dimen/font_size_16"
        style="@style/MyStyle" />


    <LinearLayout
        android:id="@+id/deal_success_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/screen_padding_double"
        android:visibility="gone"
        android:layout_below="@+id/textViewPayFinalMessage">



<View
    android:layout_width="@dimen/screen_padding_octa"
    android:layout_height="1dp"
    android:background="#8e8e93"
    android:layout_gravity="center_horizontal"/>


<TextView
    android:id="@+id/sharing_txt"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:textStyle="bold"
    android:text="bcnbm"
    android:drawablePadding="9dp"
    android:drawableLeft="@drawable/shape"
    android:layout_gravity="center_horizontal"
    android:textColor="@color/black_B311"/>



    </LinearLayout>

</RelativeLayout>