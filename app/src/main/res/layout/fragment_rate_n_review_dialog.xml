<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rating_wrapper_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rating_logo_container"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/screen_padding_plus_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/rating_logo_bg_1_iv"
                        android:layout_width="@dimen/rating_logo_bg_1_size"
                        android:layout_height="@dimen/rating_logo_bg_1_size"
                        android:src="@drawable/user_icon_background_1"
                        android:layout_centerInParent="true"/>

                    <ImageView
                        android:id="@+id/rating_logo_bg_iv"
                        android:layout_width="@dimen/rating_logo_bg_size"
                        android:layout_height="@dimen/rating_logo_bg_size"
                        android:src="@drawable/user_icon_background"
                        android:layout_centerInParent="true"/>

                    <ImageView
                        android:id="@+id/rating_logo_iv"
                        android:layout_width="@dimen/rating_logo_size"
                        android:layout_height="@dimen/rating_logo_size"
                        android:src="@drawable/rating_user_icon_0"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/restaurant_visit_text_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding_eighteen"
                    android:textColor="@color/black"
                    android:text="Hey, Did you visit?"
                    android:gravity="center"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:padding="@dimen/screen_padding_half"/>

                <TextView
                    android:id="@+id/restaurant_visit_text_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Summer House Cafe"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/grey_69"
                    android:textSize="@dimen/font_size_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding_eighteen">
                    <TextView
                        android:id="@+id/left_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="NO"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="@dimen/screen_padding_plus_half"
                        android:paddingBottom="@dimen/screen_padding_plus_half"
                        android:paddingLeft="@dimen/screen_padding_plus_half"
                        android:paddingRight="@dimen/screen_padding_plus_half"
                        android:textColor="@color/grey_9a"
                        android:background="@color/grey_ec"
                        android:textSize="@dimen/font_size_20"/>

                    <TextView
                        android:id="@+id/right_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="YES"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="@dimen/screen_padding_plus_half"
                        android:paddingBottom="@dimen/screen_padding_plus_half"
                        android:paddingLeft="@dimen/screen_padding_plus_half"
                        android:paddingRight="@dimen/screen_padding_plus_half"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_20"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/cross_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/review_cross_icon"/>

    </LinearLayout>

</RelativeLayout>
