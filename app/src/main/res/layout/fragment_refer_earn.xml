<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_fragment"
        android:layout_width="match_parent"
        android:background="@color/white_EF"
        android:layout_height="wrap_content" />



            <LinearLayout
                android:id="@+id/linear_layout_refer_container"
                android:layout_width="match_parent"
                android:layout_below="@id/toolbar_fragment"
                android:weightSum="9"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/screen_padding_double"
                        android:layout_marginTop="@dimen/screen_padding_double"
                        android:src="@drawable/img_refer" />

                    <TextView
                        android:id="@+id/refer_head_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_your_referral_code"
                        android:textColor="@color/grey_4D"
                        android:textSize="@dimen/font_size_14" />

                    <TextView
                        android:id="@+id/referral_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/screen_padding_plus_half"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_size_28"
                        tools:text="0009RE0" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:layout_margin="@dimen/screen_padding">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/refer_plus_container"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/refer_plus_container"
                        android:layout_toLeftOf="@+id/strut"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/refer_do_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/screen_padding"
                            android:layout_marginTop="@dimen/screen_padding"
                            android:paddingLeft="@dimen/screen_padding_plus_half"
                            android:paddingRight="@dimen/screen_padding_plus_half"
                            android:text="@string/refer_dineout"
                            android:textColor="#34495e"
                            android:textSize="@dimen/font_size_16" />



                        <TextView
                            android:id="@+id/refer_do_amount"
                            android:layout_width="wrap_content"
                            android:layout_below="@id/refer_do_title"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/screen_padding_plus_half"
                            android:paddingRight="@dimen/screen_padding_plus_half"
                            android:text="@string/refer_dineout_amt"
                            android:textColor="#78baa7"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/refer_know_do"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/refer_do_amount"
                            android:gravity="center"
                            android:paddingBottom="@dimen/screen_padding"
                            android:paddingLeft="@dimen/screen_padding_plus_half"
                            android:paddingRight="@dimen/screen_padding_plus_half"
                            android:paddingTop="@dimen/screen_padding"
                            android:text="know more"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_size_12" />

                        <TextView
                            android:id="@+id/refer_do_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#34495e"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:padding="@dimen/screen_padding"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_16" />




                    </RelativeLayout>

                    <View
                        android:id="@+id/strut"
                        android:layout_width="10dp"
                        android:layout_height="0dp"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:id="@+id/refer_plus_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/strut"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/refer_do_plus_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/screen_padding"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/screen_padding"
                            android:paddingLeft="@dimen/screen_padding_plus_half"
                            android:paddingRight="@dimen/screen_padding_plus_half"
                            android:text="@string/refer_dineout_plus"
                            android:textColor="#34495e"
                            android:textSize="@dimen/font_size_16" />

                        <TextView
                            android:id="@+id/refer_do_plus_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/screen_padding_plus_half"
                            android:layout_below="@id/refer_do_plus_title"
                            android:paddingRight="@dimen/screen_padding_plus_half"
                            android:text="@string/refer_dineout_plus_amt"
                            android:textColor="#78baa7"
                            android:textSize="@dimen/font_size_14" />

                        <TextView
                            android:id="@+id/refer_know_do_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/screen_padding"
                            android:paddingLeft="@dimen/screen_padding_plus_half"
                            android:paddingRight="@dimen/screen_padding_plus_half"
                            android:layout_below="@id/refer_do_plus_amount"
                            android:paddingTop="@dimen/screen_padding"
                            android:text="know more"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_size_12" />

                        <TextView
                            android:id="@+id/refer_do_plus_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="#78baa7"
                            android:gravity="center"
                            android:padding="@dimen/screen_padding"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_16" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>


    <include
        layout="@layout/dineout_loader_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <include layout="@layout/network_error_layout" />

    <RelativeLayout
        android:id="@+id/login_screen"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_fragment">

        <include layout="@layout/login_screen_common"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </RelativeLayout>

</RelativeLayout>