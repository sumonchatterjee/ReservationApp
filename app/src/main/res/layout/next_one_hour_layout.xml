<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/hour_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">




     <RelativeLayout
         android:id="@+id/go_now_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white">



      <com.dineout.android.volley.toolbox.NetworkImageView
          android:id="@+id/waiting_icon"
          android:layout_width="75dp"
          android:layout_height="75dp"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:paddingRight="12dp"
          />


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="@dimen/screen_padding_plus_half"
             android:paddingLeft="@dimen/screen_padding_plus_half"
             android:paddingRight="@dimen/screen_padding_plus_half"
             android:paddingBottom="3dp"
             android:layout_marginRight="30dp"
             android:layout_alignParentLeft="true"
             android:layout_toRightOf="@+id/waiting_icon"
             android:layout_centerVertical="true"
            >

             <TextView
                 android:id="@+id/title_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/font_size_20"
                 android:textColor="@color/grey_4D"
                 android:textStyle="bold"
                />


             <TextView
                 android:id="@+id/sub_title_txt"
                 android:layout_below="@+id/title_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/font_size_12"
                 android:textColor="@color/grey_9b"
                 android:paddingTop="5dp"
                 android:layout_marginRight="13dp"
                 android:text="Make sure you make it there before 7 to avail the offer"
                 />



         </RelativeLayout>





     </RelativeLayout>


