<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/screen_padding_double">

        <TextView
            android:id="@+id/tv_rr_title"
            style="@style/MyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/screen_padding_triple"
            android:layout_marginTop="@dimen/screen_padding_triple"
            android:gravity="center"
            android:text="@string/rating_info_header"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_20"
            android:textStyle="normal" />

        <RatingBar
            android:id="@+id/sb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rr_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/screen_padding_penta"
            android:numStars="5"
            android:progressDrawable="@drawable/rating_bar"
            android:stepSize="1.0" />

        <EditText
            android:id="@+id/et_review"
            style="@style/MyStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/sb_rating"
            android:layout_marginLeft="@dimen/screen_padding"
            android:layout_marginRight="@dimen/screen_padding"
            android:layout_marginTop="@dimen/screen_padding"
            android:background="@drawable/edit_review_bcg"
            android:gravity="top"
            android:hint="@string/review_hint"
            android:imeOptions="actionGo"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="1000"
            android:maxLines="7"
            android:minLines="5"
            android:padding="@dimen/screen_padding"
            android:textColor="@color/app_grey_shade_five"
            android:textColorHint="@color/app_grey_shade_eight"
            android:textIsSelectable="false" />

    </RelativeLayout>

</ScrollView>