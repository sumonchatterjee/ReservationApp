<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/earnings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="42dp"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/font_size_16" />


        <TextView
            android:id="@+id/earnings_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/green"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/earnings_title_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/earnings_title"
            android:paddingTop="3dp"
            android:textColor="@color/grey_new"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/earnings_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/earnings_title_second"
            android:textColor="@color/grey_new"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/earnings_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/earnings_location"
            android:textColor="@color/grey_new"
            android:textSize="@dimen/font_size_12" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/earnings_date"
            android:layout_marginTop="11dp"
            android:background="#c8c7cc" />

    </RelativeLayout>

</RelativeLayout>