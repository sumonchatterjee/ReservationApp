<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_E5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_option_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_white_button_selector"
        android:drawableLeft="@drawable/ic_menu"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_grey_arrow_right"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        tools:text="View menu" />

    <View
        style="@style/ViewShadow"
        android:layout_width="match_parent" />

</LinearLayout>