<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/circle_img_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_indicator">

        <TextView
            android:id="@+id/number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vertical_line_layout"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="#adadad"
        android:layout_below="@+id/circle_img_wrapper"
        android:layout_marginLeft="13dp"
        android:minHeight="30dp" />


    <TextView
        android:id="@+id/description_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/circle_img_wrapper"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#4c4a4a"
        />


</RelativeLayout>