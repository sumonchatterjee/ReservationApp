<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen_padding_plus_half"
        android:layout_marginRight="@dimen/screen_padding_plus_half"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBookingDetailLeftButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/screen_padding"
            android:layout_weight="1"
            android:background="@drawable/round_getdirection_feedback_button_selector"
            android:gravity="center"
            android:padding="@dimen/screen_padding"
            android:textColor="@color/booking_detail_address_text"
            android:textSize="@dimen/font_size_14"
            tools:drawableTop="@drawable/ic_get_directions_dark_enabled"
            tools:text="@string/button_get_directions" />

        <Button
            android:id="@+id/buttonBookingDetailRightButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_getdirection_feedback_button_selector"
            android:gravity="center"
            android:padding="@dimen/screen_padding"
            android:textColor="@color/booking_detail_address_text"
            android:textSize="@dimen/font_size_14"
            tools:drawableTop="@drawable/ic_paynow_dark_enabled"
            tools:text="@string/button_pay_bill" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="@dimen/screen_padding_plus_half"
        android:background="@color/booking_detail_stroke" />

</LinearLayout>