<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        style="@style/DividerStyle.Short"
        />


    <TextView
        android:id="@+id/textView_additional_offer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@string/font_fontFamily_medium"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:text="@string/text_additional_offer"
        android:textColor="@color/grey_4D"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linearLayout_additional_offer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/button_additional_offer_book_now"
        style="@style/ButtonStyle.RectanglePrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/button_book_now"
        android:textColor="@color/generic_button_text_color_selector" />

</LinearLayout>