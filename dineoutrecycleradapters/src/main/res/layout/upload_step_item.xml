<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#e5000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="19.5dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/screen_padding_double"
        android:paddingRight="@dimen/screen_padding_double">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/step_numbers_text"
            android:layout_marginRight="@dimen/screen_padding_double"
            android:background="@drawable/ring_white_shape"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/steps_description"
            android:layout_toRightOf="@id/step_numbers_text"
            android:fontFamily="sans-serif-light"
            android:paddingTop="5.5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />

</LinearLayout>
    </LinearLayout>

