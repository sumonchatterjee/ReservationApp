<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_D2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen_padding_plus_half"
        android:layout_marginRight="@dimen/screen_padding_plus_half"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

    <com.dineout.android.volley.toolbox.NetworkImageView
        android:id="@+id/secondary_cta_icon"
        android:layout_width="20dp"
        android:layout_marginRight="15dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"/>


        <LinearLayout
            android:layout_toRightOf="@+id/secondary_cta_icon"
            android:layout_marginLeft="0dp"
            android:layout_centerVertical="true"
            android:id="@+id/middle_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/grey_4D"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/grey_50_4D"
                android:textSize="14sp"
                android:layout_marginRight="30dp"
                />



        </LinearLayout>


        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"/>



    </RelativeLayout>



</LinearLayout>