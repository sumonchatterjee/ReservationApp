<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/screen_padding_half"
    android:paddingTop="@dimen/screen_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ticket_price"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey_4D"
            android:textSize="@dimen/font_size_12"
            tools:text="\u20B9 15000/-" />

        <TextView
            android:id="@+id/ticket_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:textColor="@color/grey_4D"
            android:textSize="@dimen/font_size_12"
            android:textStyle="italic"
            tools:text="Qty: 2" />

        <TextView
            android:id="@+id/ticket_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ticket_quantity"
            android:textColor="@color/grey_4D"
            android:textSize="@dimen/font_size_12"
            tools:text="Ticket Name" />
    </RelativeLayout>

    <TextView
        android:id="@+id/price_per_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey_75"
        android:textSize="10sp"
        android:textStyle="italic"
        tools:text="@string/text_price_per_ticket" />

</LinearLayout>