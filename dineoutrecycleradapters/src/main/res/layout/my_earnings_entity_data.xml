<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_entity_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my_earnings_layout_margin"
    android:layout_marginRight="@dimen/my_earnings_layout_margin"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary">

    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/entity_data_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/promo_margin"
                android:layout_marginTop="@dimen/promo_margin"
                android:text="Restaurant name"
                android:textColor="@color/activate_heading_label_color"
                android:textSize="@dimen/font_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/promo_margin"
                android:layout_marginLeft="@dimen/promo_margin_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_restaurant_location" />

                <TextView
                    android:id="@+id/entity_data_restaurant_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="All outlets"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/grey_new" />
            </LinearLayout>
        </LinearLayout>



            <TextView
                android:id="@+id/earnings_text"
                android:layout_width="0dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="hkvkhv"
                android:layout_weight="0.8"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/entity_data_text_size"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_4D" />



    </LinearLayout>


</LinearLayout>