<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:id="@+id/chip_layout_wrapper"
    android:layout_height="wrap_content"
    android:background="@drawable/rate_n_review_chip_selector"
    android:layout_marginTop="@dimen/screen_padding_half"
    android:layout_marginBottom="@dimen/screen_padding_half"
    android:layout_marginLeft="@dimen/screen_padding_half"
    android:layout_marginRight="@dimen/screen_padding_half">

    <TextView
        android:id="@+id/chip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:paddingTop="@dimen/font_size_8"
        android:paddingBottom="@dimen/font_size_8"
        android:paddingLeft="@dimen/font_size_8"
        android:paddingRight="@dimen/font_size_8"
        android:gravity="center"
        android:textColor="@color/rate_n_review_chip_text_color"
        android:textSize="@dimen/font_size_12"/>
</RelativeLayout>