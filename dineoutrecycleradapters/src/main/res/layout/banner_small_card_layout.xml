<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/screen_padding_half"
        android:layout_marginLeft="@dimen/screen_padding_half"
        android:layout_marginRight="@dimen/screen_padding_half">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_banner_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/pos_indicator_banner_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/screen_padding_half"
        android:layout_marginBottom="@dimen/screen_padding_half"
        android:orientation="horizontal" />

    <View
        style="@style/DividerStyle"
        />

</LinearLayout>