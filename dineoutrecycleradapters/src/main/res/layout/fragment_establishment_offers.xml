<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/transparent"
    android:layerType="software"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/deals_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashed_boundary_new"
        android:layerType="software"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/screen_padding_half"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_deals_offer_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_action_offer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_deals_offer_icon"
            android:orientation="vertical"
            android:paddingLeft="2dp">

            <TextView
                android:id="@+id/tv_offer_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="2"
                android:textColor="#4D4D4D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_offer_timing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="2"
                android:text="Mon - Sun 8:00 PM to 11:45 PM"
                android:textColor="#4D4D4D"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/screen_padding_half"
                style="@style/MyStyle"
                android:text="TAP TO VIEW MORE DETAILS"
                android:textColor="#4D4D4D"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>