<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_label_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout_time_slot_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="@dimen/screen_padding"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="@dimen/screen_padding">

        <TextView
            android:id="@+id/textView_label"
            style="@style/MyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_disable_color_selector_grey_4d"
            android:textSize="15sp"
            tools:text="Breakfast" />

        <TextView
            android:id="@+id/textView_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_label"
            android:layout_marginTop="14dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#898989"
            android:textSize="10sp"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            tools:text="Select offer and walk in" />

        <!--<TextView-->
            <!--android:id="@+id/textView_left_string"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_toRightOf="@id/textView_label"-->
            <!--android:maxLines="1"-->
            <!--android:singleLine="true"-->
            <!--android:textColor="@color/colorPrimary"-->
            <!--android:textSize="11sp"-->
            <!--android:visibility="visible"-->
            <!--tools:text="(4 left)"-->
            <!--tools:visibility="visible" />-->

        <ImageView
            android:id="@+id/imageView_drawer_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/drop_down_arrow_selector" />
    </RelativeLayout>

    <View
        android:id="@+id/view_label_divider"
        style="@style/DividerStyle"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


    <TextView
        android:id="@+id/textView_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/text_time_slot_error_msg"
        android:textColor="#4D4D4D4D"
        android:textSize="@dimen/font_size_12"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible" />


<RelativeLayout
    android:id="@+id/restaurant_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="11dp"
    android:paddingTop="11dp"
    android:visibility="gone">



    <TextView
        android:id="@+id/info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        style="@style/MyStyle"
        android:lineSpacingExtra="3dp"
        android:layout_toLeftOf="@+id/imageView_watch"
        />





    <com.dineout.android.volley.toolbox.NetworkImageView
        android:id="@+id/imageView_watch"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
         />




</RelativeLayout>





    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_time_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/screen_padding_double" />

    <View
        android:id="@+id/view_label_lower_divider"
        style="@style/DividerStyle"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>