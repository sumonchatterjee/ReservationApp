<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_item_wrapper"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="15.5dp"
    android:paddingBottom="13.8dp">

    <RadioButton
        android:id="@+id/radio_btn_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginLeft="27.5dp"
        android:background="@drawable/filter_screen_radio_button_selector"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:textSize="@dimen/font_size_16"
        android:clickable="false"
        android:textColor="@color/grey_35" />

    <TextView
        android:id="@+id/radio_btn_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/radio_btn_iv"
        android:layout_centerVertical="true"
        android:paddingLeft="0dp"
        android:paddingRight="21dp"
        android:text="Paid"
        android:textColor="@color/grey_35"
        android:textSize="@dimen/font_size_16"/>
</RelativeLayout>