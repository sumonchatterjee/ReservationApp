<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my_earnings_layout_margin"
    android:layout_marginRight="@dimen/my_earnings_layout_margin"
    android:layout_marginTop="2dp"
    android:background="@drawable/round_top_corners"
    android:orientation="vertical">


    <TextView
        android:id="@+id/data_header_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_fragment"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/promo_margin"
        android:layout_marginTop="@dimen/screen_padding_plus_half"
        android:text="Additional Earnings"
        android:textColor="@color/activate_heading_label_color"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/data_header_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:textSize="@dimen/font_size_12"
        android:layout_marginLeft="@dimen/promo_margin"
        android:text="Use at following Restaurants"
        android:textColor="@color/grey_new" />

</LinearLayout>