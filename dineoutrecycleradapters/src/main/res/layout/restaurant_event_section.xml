<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_E5"
    android:orientation="vertical">

    <include
        layout="@layout/restaurant_event_notification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_E5"
        android:fontFamily="@string/font_fontFamily_medium"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/grey_4D"
        android:textSize="14sp"
        android:visibility="gone" />

    <include
        layout="@layout/event_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="15dp" />

    <include
        layout="@layout/restaurant_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>