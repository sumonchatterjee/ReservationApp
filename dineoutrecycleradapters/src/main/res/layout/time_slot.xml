<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout_time_slot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/time_slot_selector"
    android:clickable="true">

    <TextView
        android:id="@+id/textView_time_label"
        style="@style/RobotoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:textColor="@color/time_slot_text_color"
        android:textSize="@dimen/font_size_14"
        tools:text="09:50" />

    <TextView
        android:id="@+id/textView_time_indicator"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp" />

</FrameLayout>