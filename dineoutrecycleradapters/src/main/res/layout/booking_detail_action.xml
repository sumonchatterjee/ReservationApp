<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/screen_padding_plus_half"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="@dimen/screen_padding_plus_half">


    <TextView
        android:id="@+id/primary_cta_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_4D"
        android:textSize="@dimen/font_size_14"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="3dp"
        />


    <!--<Button-->
        <!--android:id="@+id/primary_cta"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/screen_padding"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:stateListAnimator="@null"-->
        <!--android:textColor="@color/white"/>-->


    <RelativeLayout
        android:id="@+id/primary_cta"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cta_min_height"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:stateListAnimator="@null"
        android:gravity="center"
        android:background="@drawable/fragment_restaurant_detail_bottom_button_drawable">

        <TextView
            android:id="@+id/cta_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/cta_sub_title"
            android:layout_below="@+id/cta_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


</LinearLayout>
