<resources>

    <!-- Common Styles Defined -->
    <style name="MyStyle">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="RobotoTextStyle">
        <item name="android:fontFamily">@string/font_roboto</item>
    </style>


    <style name="ViewShadow">
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/view_shadow</item>
    </style>

    <style name="SharpViewShadow" parent="ViewShadow">
        <item name="android:background">@drawable/sharp_view_shadow</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="DividerStyle.Short">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:background">@color/grey_F1</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/grey_4D</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="TitleStyleHeader">
        <item name="android:background">@color/grey_E5</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/grey_4D</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/grey_4D</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SubTitleStyle.Medium">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="EditTextFormStyle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_4D</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/grey_E5</item>
    </style>

    <style name="appTextViewStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_CC</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="appEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/screen_padding_plus_half</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="appEditTextStyle.Dark">
        <item name="android:background">@drawable/rectangle_black_shape</item>
    </style>

    <style name="appEditTextStyle.Light">
        <item name="android:textColor">@color/black_18</item>
        <item name="android:background">@drawable/round_rectangle_white_grey_border_shape</item>
    </style>

    <style name="RatingStyle">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LightButtonStyle">
        <item name="android:textColor">@color/grey_4D</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/screen_padding</item>
        <item name="android:paddingBottom">@dimen/screen_padding</item>
        <item name="android:background">@drawable/round_rectangle_light_button_selector</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/screen_padding_plus_half</item>
        <item name="android:paddingBottom">@dimen/screen_padding_plus_half</item>
        <item name="android:background">@drawable/round_rectangle_primary_button_selector</item>
    </style>

    <style name="ButtonStyle.Secondary">
        <item name="android:background">@drawable/round_rectangle_secondary_button_selector</item>
    </style>

    <style name="ButtonStyle.RectanglePrimaryButton">
        <item name="android:background">@drawable/rectangle_primary_button_selector</item>
    </style>

    <style name="ButtonStyle.RectanglePrimaryRoundBottomButton">
        <item name="android:background">@drawable/round_bottom_primary_button_selector</item>
    </style>

    <style name="ButtonStyle.RectanglePrimaryButtonTextMedium">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:background">@drawable/rectangle_primary_button_selector</item>
    </style>

    <style name="ButtonStyle.RoundRectangleWhitePrimaryBorderButton">
        <item name="android:background">
            @drawable/round_rectangle_white_primary_border_button_selector
        </item>
    </style>

    <style name="ExpandedTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CollapsedTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--restaurant details:start-->
    <style name="RestDetailSection">
        <item name="android:layout_marginTop">@dimen/screen_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/screen_padding</item>
        <item name="android:paddingRight">@dimen/screen_padding</item>
    </style>

    <style name="RestDetailsFieldTitle">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@color/resto_detail_title_color</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="RestDetailsFieldTitleV1" parent="@style/RestDetailsFieldTitle">
        <item name="android:textColor">@color/booking_detail_resto_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RestDetailsFieldTitleV2" parent="@style/RestDetailsFieldTitle">
        <item name="android:textColor">@color/booking_detail_resto_name</item>
    </style>

    <style name="PageIndicatorStyle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/grey_circle</item>
    </style>

    <style name="PageIndicatorStyle.Spacing">
        <item name="android:layout_marginRight">5dp</item>
    </style>



    <style name="EditTextAccountStyle">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_75</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#c7c8cc</item>
    </style>


    <style name="DOCheckBox" parent="DOAppTheme">
        <item name="colorControlNormal">@color/warm_grey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>






   



</resources>
