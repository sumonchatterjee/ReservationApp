<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_smartPay"
        style="@style/MyStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/smartpay_tag_selector"
        android:clickable="true"
        android:paddingBottom="@dimen/screen_padding_half"
        android:paddingLeft="@dimen/screen_padding"
        android:paddingRight="@dimen/screen_padding"
        android:paddingTop="@dimen/screen_padding_half"
        android:text="@string/text_smartPay"
        android:textColor="@color/green_white_text_selector"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>